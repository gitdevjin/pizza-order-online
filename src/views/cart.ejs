                <div class="nav__burger"></div>
            </div>
        </nav>
    </header>

    <side class="nav-box">
        <div>
            <ul class="nav__login">
                <li class="nav__login-item"><a href="/signin" id="sign-in-link">üîì Sign in</a></li>
                <li class="nav__login-item"><a href="/signup">üë§ Sign up</a></li>
            </ul>
            <p class="online-order-btn">
                <a href="/cart">Order Now üõí</a>
            </p>
            <ul class="nav__menu">
                <li class="nav__menu-item">
                    <a href="/pizza">
                        <span>üçï</span>
                        <span>Pizza<div class="nav__menu-icon"></div></span>
                    </a>
                </li>
                <li class="nav__menu-item">
                    <a href="/salad">
                        <span>ü•ó</span>
                        <span>Salads</span>
                    </a>
                </li>
                <li class="nav__menu-item">
                    <a href="/sides">
                        <span>üçó</span>
                        <span>Sides</span>

                    </a>
                </li>
                <li class="nav__menu-item">
                    <a href="/drink">
                        <span>ü•§</span>
                        <span>Drinks</span>
                    </a>
                </li>
            </ul>
        </div>
        <ul class="nav__list">
            <li class="nav__list-item">
                <a href="/">Mock List 1</a>
                <a href="/">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
            <li class="nav__list-item">
                <a href="/">Mock List 2</a>
                <a href="/">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
            <li class="nav__list-item">
                <a href="/">Mock List 3</a>
                <a href="/">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
            <li class="nav__list-item">
                <a href="/">Mock List 4</a>
                <a href="/">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
            <li class="nav__list-item">
                <a href="/manage">Manager Users</a>
                <a href="/manage">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
            <li class="nav__list-item">
                <a href="/order">Manage Orders</a>
                <a href="/order">
                    <img src="./icon/greater.png" alt="" width="17px" height="17px">
                </a>
            </li>
        </ul>
        <button type="button" class="nav-box-close">
        </button>
    </side>
    <div class="overlay"></div>


    <main class="main">
        <section class="main-nav-container">
            <ul class="main-nav-list">
                <li class="main-nav-item"><a href="/pizza">Pizza</a></li>
                <li class="main-nav-item"><a href="/salad">Salads</a></li>
                <li class="main-nav-item"><a href="/sides">Sides</a></li>
                <li class="main-nav-item"><a href="/drink">Drinks</a></li>
            </ul>
            <ul class="recommend-list">
                <li class="recommend-item"><span>#REC</span></li>
                <li class="recommend-item">
                    <img src="./icon/new.gif" alt="">
                    <a href="/pizza">Shrimp Pizza</a>
                </li>
                <li class="recommend-item">
                    <a href="/salad">Greek Salad</a>
                </li>
            </ul>
        </section>

        <div class="sub-title">
            <h1> Cart <span class="sub-title-pizza">Items</span></h1>
        </div>
        <section class="cart-section">
            <div class="cart-container">
                <ul class="cart-list">
                    <% data.forEach((item, index)=>{ %>
                        <li class="cart-item">
                            <input type="hidden" id="item-id" value="<%= item._id %>">
                            <img src="./img/<%=item.src %>" width="100px" alt="">
                            <div class="item-desc">
                                <p><span id="item<%= index %>-name">
                                        <%= item.itemName %>
                                    </span></p>
                                <p>
                                    Size: <span id="item<%= index %>-size">
                                        <%= item.size %>
                                    </span>
                                </p>
                                <p>
                                    Price: $<span id="item<%= index %>-price">
                                        <%= item.price %>
                                    </span>
                                </p>
                                <p> Sum: <span id="item<%=index%>-sum"></span></p>
                            </div>
                            <div class="item-qty">
                                <div class="input-plus">+</div>
                                <input type="text" id="item<%= index %>-quantity" name="item-quantity"
                                    value="<%= item.quantity %>" class="input-quantity">
                                <div class="input-minus">-</div>
                            </div>
                            <div class="item-delete">
                                <input type="button" class="delete-btn" value="Delete">
                            </div>
                        </li>
                        <% }) %>
                </ul>
                <p>Total Price: <span id="total-sum"></span></p>
            </div>
            <input type="button" class="order-btn" value="Order">
        </section>
    </main>



    <footer class="footer">
        <section class="section-footer">
            <ul class="sns-list">
